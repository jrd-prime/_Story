using _StoryGame.Core.Messaging.Interfaces;
using _StoryGame.Game.Interactables.Data;
using Cysharp.Threading.Tasks;

namespace _StoryGame.Core.UI.Msg
{
    // TODO название хз
    public record ShowProgressBarOnPlayerActionMsg(
        string ActionName,
        float Duration,
        UniTaskCompletionSource<EDialogResult> CompletionSource
    ) : IPlayerActionMsg
    {
        public string ActionName { get; } = ActionName;
        public float Duration { get; } = Duration;
        public UniTaskCompletionSource<EDialogResult> CompletionSource { get; } = CompletionSource;
    }

    public record ShowThoughtOnPlayerActionMsg(string ActionName, ThoughtDataVo ThoughtDataVo, float Duration = 3f)
        : IPlayerActionMsg
    {
    }

    public record ThoughtDataVo(string LocalizedThought);
}
